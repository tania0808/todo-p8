{% extends 'base.html.twig' %}

{% block header_title %}
    <h1>Bienvenue sur Todo List, l'application vous permettant de gérer l'ensemble de vos tâches sans effort !</h1>
{% endblock %}

{% block body %}
    <div class="d-grid gap-3 d-md-block">
        {% if app.user %}
            <a href="{{ path('task_create') }}" class="btn btn-success mt-1">Créer une nouvelle tâche</a>
            <a href="{{ path('task_list', { isDone: false }) }}" class="btn btn-info mt-1">Consulter la liste des tâches à faire</a>
            <a href="{{ path('task_list', { isDone: true }) }}" class="btn btn-secondary mt-1">Consulter la liste des tâches terminées</a>
        {% else %}
            <h4>Pour profiter de toutes les fonctionnalités de l'application, veuillez vous connecter.</h4>
        {% endif %}
    </div>
{% endblock %}
